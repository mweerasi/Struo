<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arkm.struo.CalendarFragment"
    android:background="#3fb399">

    <TextView
        android:id="@+id/dayNumberView"
        android:text="dayNumberView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textColor="#206757"
        android:textSize="70dp"
        android:background="#ffffff"
        android:layout_below="@+id/monthView"
        android:layout_alignStart="@+id/monthView"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/city_field"
        android:text="city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_field"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/monthView"
        android:text="monthView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/yearView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#206757"/>

    <TextView
        android:id="@+id/date"
        android:text="dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#206757"
        android:layout_alignBottom="@+id/dayNumberView"
        android:layout_alignEnd="@+id/dayNumberView"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/yearView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/monthView" />

    <TextView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="90sp" />

    <TextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_icon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/current_temperature_field"
        android:text="temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:layout_below="@+id/details_field"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
