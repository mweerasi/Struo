<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arkm.struo.MainActivity$CalendarFragment"
    android:background="#3fb399">

    <TextView
        android:id="@+id/monthView"
        android:text="monthView"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/yearView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#206757"/>

    <TextView
        android:id="@+id/dayNumberView"
        android:text="dayNumberView"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_below="@+id/monthView"
        android:layout_alignStart="@+id/monthView"
        android:textColor="#206757"
        android:textSize="70dp"
        android:background="#ffffff"
        android:gravity="center"/>

    <TextView
        android:id="@+id/date"
        android:text="dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#206757"
        android:layout_alignBottom="@+id/dayNumberView"
        android:layout_alignEnd="@+id/dayNumberView"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/yearView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/monthView" />

</RelativeLayout>
